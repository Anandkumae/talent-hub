rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isJobOwner(postedBy) {
      return isSignedIn() && request.auth.uid == postedBy;
    }

    function isCandidateOwner(candidateUserId) {
      return isSignedIn() && request.auth.uid == candidateUserId;
    }

    function getUserRole() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      if (exists(/databases/$(database)/documents/users/$(request.auth.uid))) {
        return userDoc.data.role;
      }
      return 'User';
    }

    function isAdminOrHR() {
      let role = getUserRole();
      return role == 'Admin' || role == 'HR';
    }

    // --- USERS ---
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn();
      allow list: if false;
    }

    // --- JOBS ---
    match /jobs/{jobId} {
      // ✅ Anyone can view all jobs
      allow read, list: if true;

      // ✅ Only creator can post job, if they are Admin or HR
      allow create: if isSignedIn() && request.resource.data.postedBy == request.auth.uid && (isAdminOrHR());

      // ✅ Only creator or Admin/HR can update/delete jobs
      allow update, delete: if isSignedIn() && (isJobOwner(resource.data.postedBy) || isAdminOrHR());
    }

    // --- CANDIDATES ---
    match /candidates/{candidateId} {
      // ✅ Read: Admins/HR see all; user sees their own applications
      allow read: if isSignedIn() && (isCandidateOwner(resource.data.userId) || isAdminOrHR());

      // ✅ Allow Admins/HR to list all candidates
      allow list: if isSignedIn() && isAdminOrHR();

      // ✅ Allow any signed-in user to apply (must set userId in data)
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // ✅ Allow update/delete by Admin/HR or the candidate themselves
      allow update, delete: if isSignedIn() && (isCandidateOwner(resource.data.userId) || isAdminOrHR());
    }
  }
}
